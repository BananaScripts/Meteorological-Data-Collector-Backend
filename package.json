{
  "name": "meteorological-data-collector-backend",
  "version": "1.0.0",
  "scripts": {
    "dev": "concurrently \"cross-env PORT=8080 npm run dev-app\" \"cross-env PORT=8081 npm run dev-server\"",
    "dev:Collector": "ts-node-dev src/Collector/server.ts --port 30015",
    "dev:Controller": "ts-node-dev --respawn --transpile-only src/Controller/server.ts --port 30105",
    "dev:Kepper": "ts-node-dev src/Kepper/server.ts",
    "dev:Simullator": "ts-node-dev src/Simulator/server.ts",
    "DB": "npx prisma generate --schema \"./db/src/prisma/schema.prisma\" && npx prisma migrate dev --schema \"./db/src/prisma/schema.prisma\"",
    "DB:Restart": "npx prisma generate --schema \"./db/src/prisma/schema.prisma\" && ts-node-dev db/src/RestartDatabase.ts",
    "DB:Deploy": "npx prisma generate --schema \"./db/src/prisma/schema.prisma\" && npx prisma migrate deploy --schema \"./db/src/prisma/schema.prisma\"",
    "Test:DB": "npx prisma generate --schema \"./db/src/prisma/schema.prisma\" && ts-node-dev db/src/Tests/Test_Base.ts",
    "test:integration": "jest --testPathPattern=src/__tests__/integration",
    "migrate": "npx prisma migrate dev",
    "generate": "npx prisma generate",
    "build": "tsc",
    "start": "ts-node src/index.ts",
    "update-db": "node updateDB.js",
    "test": "jest",
    "dev-app": "ts-node-dev --respawn --transpile-only src/Controller/app.ts",
    "dev-server": "ts-node-dev --respawn --transpile-only src/Collector/server.ts"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@types/express": "^4.17.21",
    "axios": "^1.7.7",
    "body-parser": "^1.20.3",
    "cors": "^2.8.5",
    "curl": "^0.1.4",
    "dotenv": "^16.4.5",
    "express": "^4.21.1",
    "migrate": "^2.1.0",
    "mongodb": "^6.9.0",
    "mongosh": "^2.3.2",
    "pg": "^8.13.0",
    "readline-sync": "^1.4.10",
    "typescript": "^5.6.2"
  },
  "devDependencies": {
    "@prisma/client": "^5.21.1",
    "@types/cors": "^2.8.17",
    "@types/jest": "^29.5.14",
    "@types/jsonwebtoken": "^9.0.7",
    "@types/node": "^22.5.5",
    "@types/pg": "^8.11.10",
    "@types/readline-sync": "^1.4.8",
    "@types/supertest": "^6.0.2",
    "concurrently": "^8.0.1",
    "cross-env": "^7.0.3",
    "jsonwebtoken": "^9.0.2",
    "prisma": "^5.21.1",
    "supertest": "^7.0.0",
    "ts-jest": "^29.2.5",
    "ts-node-dev": "^2.0.0"
  },
  "main": "index.js",
  "description": ""
}
