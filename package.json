{
  "name": "meteorological-data-collector-backend",
  "version": "1.0.0",
  "scripts": {
    "dev": "npx prisma generate --schema \"./db/src/prisma/schema.prisma\" && \"npm run dev:Collector\" \"npm run dev:Controller\" \"npm run dev:Keeper\" \"npm run dev:Simulator\"",
    "dev:Collector": "ts-node-dev --respawn --transpile-only src/Collector/server_Collector.ts --port 30015",
    "dev:Controller": "ts-node-dev --respawn --transpile-only src/Controller/server_Controller.ts --port 30105",
    "dev:Keeper": "ts-node-dev --respawn --transpile-only src/Keeper/server_Keeper.ts --port 31005",
    "dev:Simulator": "ts-node-dev --respawn --transpile-only src/Simulator/server_Simulator.ts --port 30020",
    "dev:Database": "node ./db/src/InitDatabase.js",
    "build": "tsc",
    "update-db": "node updateDB.js",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
