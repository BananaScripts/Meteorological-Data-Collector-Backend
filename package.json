{
  "name": "meteorological-data-collector-backend",
  "version": "1.0.0",
  "scripts": {
    "dev": "concurrently -n Database,Collector,Controller,Keeper \"npm run dev:Database\" \"npm run dev:Keeper\" \"npm run dev:Controller \" \"npm run dev:Collector\" && npm run dev:Simulator",
    "dev:Collector": "ts-node-dev src/Collector/server.ts --port 30015",
    "dev:Controller": "ts-node-dev --respawn --transpile-only src/Controller/server.ts --port 30105",
    "dev:Keeper": "ts-node-dev --respawn --transpile-only src/Keeper/server.ts --port 31005",
    "dev:Simulator": "ts-node-dev src/Simulator/server.ts",
    "DB": "npx prisma generate --schema \"./db/src/prisma/schema.prisma\" && ts-node-dev db/src/RestartDatabase.ts && npx prisma migrate deploy --schema \"./db/src/prisma/schema.prisma\" ",
    "DB:Deploy": "npx prisma generate --schema \"./db/src/prisma/schema.prisma\" && npx prisma migrate deploy --schema \"./db/src/prisma/schema.prisma\" ",
    "test:DB": "npx prisma generate --schema \"./db/src/prisma/schema.prisma\" && ts-node-dev db/src/Tests/Test_Base.ts",
    "migrate": "npx prisma migrate dev",
    "generate": "npx prisma generate",
    "build": "tsc",
    "start": "ts-node src/index.ts",
    "update-db": "node updateDB.js",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@types/express": "^4.17.21",
    "axios": "^1.7.7",
    "body-parser": "^1.20.3",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.21.1",
    "migrate": "^2.1.0",
    "mongodb": "^6.9.0",
    "mongosh": "^2.3.2",
    "pg": "^8.13.0",
    "readline-sync": "^1.4.10",
    "typescript": "^5.6.2"
  },
  "devDependencies": {
    "@prisma/client": "^5.21.1",
    "@types/cors": "^2.8.17",
    "@types/node": "^22.5.5",
    "@types/pg": "^8.11.10",
    "@types/readline-sync": "^1.4.8",
    "concurrently": "^8.0.1",
    "prisma": "^5.21.1",
    "ts-node-dev": "^2.0.0"
  },
  "main": "index.js",
  "description": ""
}
