    "dotenv": "^16.4.5",
    "express": "^4.21.1",
    "mongodb": "^6.9.0",
    "pg": "^8.13.0",
    "readline-sync": "^1.4.10",
    "typescript": "^5.6.2"
  },
  "devDependencies": {
    "@prisma/client": "^5.21.0",
    "@types/cors": "^2.8.17",
    "@types/node": "^22.5.5",
